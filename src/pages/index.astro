  <script>
    // Scroll reveal animation for stats container
    document.addEventListener('DOMContentLoaded', () => {
      const statsContainer = document.querySelector('.stats-glass-container');
      
      const toggleStatsVisibility = () => {
        if (!statsContainer) return;
        
        const containerPosition = statsContainer.getBoundingClientRect().top;
        const containerBottom = statsContainer.getBoundingClientRect().bottom;
        const screenPosition = window.innerHeight * 0.75;
        const scrollY = window.scrollY || window.pageYOffset;
        
        // Show when scrolling down and container enters viewport
        // Hide when at top of page or when container is completely out of view
        if (scrollY < 100) {
          // At the very top of page - hide
          statsContainer.classList.remove('revealed');
        } else if (containerPosition < screenPosition && containerBottom > 0) {
          // Container is in view - show
          statsContainer.classList.add('revealed');
        } else if (containerBottom < 0) {
          // Container is above viewport - hide
          statsContainer.classList.remove('revealed');
        }
      };
      
      // Check on scroll
      window.addEventListener('scroll', toggleStatsVisibility);
      
      // Initial check
      toggleStatsVisibility();

      // Event Cards Animation on Scroll
      const eventCards = document.querySelectorAll('.event-card');
      
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -100px 0px'
      };
      
      const cardObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.animationPlayState = 'running';
            cardObserver.unobserve(entry.target);
          }
        });
      }, observerOptions);
      
      eventCards.forEach(card => {
        cardObserver.observe(card);
      });
    });
  </script>
