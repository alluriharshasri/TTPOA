---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import NewsTicker from '../components/NewsTicker.astro';
import AntigravityBg from '../components/AntigravityBg.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import heroImage from '../assets/images/Image1.jpg';
import image2 from '../assets/images/Image2.jpg';
import image3 from '../assets/images/Image3.jpg';
import presidentImage from '../assets/images/President_Image.jpeg';
---

<Layout title="TTPOA - Telangana Training and Placement Officers Association">
  <AntigravityBg />
  <Navbar currentPage="home" />
  <NewsTicker />
  
  <main class="pt-20 lg:pt-24">
    <!-- Hero Section -->
    <section class="relative min-h-[80vh] flex items-center overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 bg-pattern opacity-20"></div>
      
      <div class="relative max-w-7xl mx-auto px-1 sm:px-1.5 lg:px-2 py-16">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Left Content -->
          <div class="text-center lg:text-left">
            <h1 class="fade-up text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
              Start Your <span class="gradient-text">Career</span> & Pursue Your <span class="gradient-text">Passion</span>
            </h1>
            
            <p class="fade-up delay-100 text-lg text-white/95 mb-8 max-w-xl mx-auto lg:mx-0 leading-relaxed">
              We help our clients succeed by creating brand identities, digital experiences, and connecting talents with opportunities.
            </p>
            
            <div class="fade-up delay-200 flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-12">
              <a href={`${import.meta.env.BASE_URL}/services/`} class="btn-primary">
                View Our Programs
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
              <a href={`${import.meta.env.BASE_URL}/contact/`} class="btn-outline">
                Contact Us
              </a>
            </div>
          </div>

          <!-- Right Content - Hero Image -->
          <div class="fade-right delay-100 relative hidden lg:block">
            <div class="relative animate-float">
              <div class="absolute -inset-4 bg-gradient-to-r from-orange-500/20 to-blue-500/20 rounded-3xl blur-3xl"></div>
              <div class="relative overflow-hidden rounded-3xl shadow-2xl border-4 border-white/30">
                <Image src={heroImage} alt="TTPOA Students" class="w-full h-[500px] object-cover" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section with Glassmorphism -->
    <section class="py-12 md:py-16">
      <div class="max-w-6xl mx-auto px-1 sm:px-1.5">
        <div class="text-center mb-12">
          <h2 class="fade-up text-3xl md:text-4xl font-bold text-white mb-4">Our Impact in Numbers</h2>
          <p class="fade-up delay-100 text-white/90 max-w-2xl mx-auto">Connecting thousands across Telangana State</p>
        </div>
        
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6">
          <div class="fade-up delay-100 stats-card-glass text-center group">
            <div class="w-16 h-16 md:w-20 md:h-20 mx-auto mb-4 rounded-2xl bg-gradient-to-br from-blue-500/20 to-blue-600/20 flex items-center justify-center backdrop-blur-sm border border-white/30 group-hover:scale-110 transition-transform duration-500">
              <svg class="w-8 h-8 md:w-10 md:h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <span class="block text-3xl md:text-4xl font-extrabold text-white mb-2 counter" data-target="100000">0</span>
            <p class="text-xs md:text-sm text-white/80 uppercase tracking-wide font-semibold">Subscriptions</p>
          </div>
          
          <div class="fade-up delay-200 stats-card-glass text-center group">
            <div class="w-16 h-16 md:w-20 md:h-20 mx-auto mb-4 rounded-2xl bg-gradient-to-br from-purple-500/20 to-purple-600/20 flex items-center justify-center backdrop-blur-sm border border-white/30 group-hover:scale-110 transition-transform duration-500">
              <svg class="w-8 h-8 md:w-10 md:h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <span class="block text-3xl md:text-4xl font-extrabold text-white mb-2 counter" data-target="500">0</span>
            <p class="text-xs md:text-sm text-white/80 uppercase tracking-wide font-semibold">Colleges</p>
          </div>
          
          <div class="fade-up delay-300 stats-card-glass text-center group">
            <div class="w-16 h-16 md:w-20 md:h-20 mx-auto mb-4 rounded-2xl bg-gradient-to-br from-orange-500/20 to-orange-600/20 flex items-center justify-center backdrop-blur-sm border border-white/30 group-hover:scale-110 transition-transform duration-500">
              <svg class="w-8 h-8 md:w-10 md:h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <span class="block text-3xl md:text-4xl font-extrabold text-white mb-2 counter" data-target="200">0</span>
            <p class="text-xs md:text-sm text-white/80 uppercase tracking-wide font-semibold">Companies</p>
          </div>
          
          <div class="fade-up delay-400 stats-card-glass text-center group">
            <div class="w-16 h-16 md:w-20 md:h-20 mx-auto mb-4 rounded-2xl bg-gradient-to-br from-green-500/20 to-green-600/20 flex items-center justify-center backdrop-blur-sm border border-white/30 group-hover:scale-110 transition-transform duration-500">
              <svg class="w-8 h-8 md:w-10 md:h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
              </svg>
            </div>
            <span class="block text-3xl md:text-4xl font-extrabold text-white mb-2 counter" data-target="10000">0</span>
            <p class="text-xs md:text-sm text-white/80 uppercase tracking-wide font-semibold">Placements</p>
          </div>
        </div>
      </div>
    </section>

    <!-- President's Note Section -->
    <section class="py-12 md:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="fade-up text-3xl md:text-4xl font-bold text-white mb-4">President's Welcome Note</h2>
          <p class="fade-up delay-100 text-white/95 max-w-2xl mx-auto">TTPOA – Global TPO & HR Summit 2025</p>
        </div>

        <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-3xl overflow-hidden shadow-2xl">
          <div class="grid md:grid-cols-3 gap-8 p-8 md:p-12 items-center">
            <!-- President Image -->
            <div class="fade-left md:col-span-1">
              <div class="relative rounded-2xl overflow-hidden shadow-2xl border-4 border-white/30 max-w-xs mx-auto animate-float">
                <Image src={presidentImage} alt="Dr Jayaram - President" class="w-full h-auto object-cover" />
              </div>
            </div>

            <!-- President's Message -->
            <div class="fade-right md:col-span-2 flex flex-col justify-center">
              <div class="mb-6">
                <h3 class="text-2xl md:text-3xl font-bold text-white mb-2">Dr Jayaram</h3>
                <p class="text-orange-400 font-semibold text-base mb-1">Vice President</p>
                <p class="text-orange-300 font-medium text-sm">All India TPO Association</p>
                <p class="text-orange-400 font-semibold text-base mt-1">&</p>
                <p class="text-orange-400 font-semibold text-base">President</p>
                <p class="text-orange-300 font-medium text-sm">Telangana TPO Association</p>
              </div>
              
              <div class="space-y-4 text-white/90 leading-relaxed text-sm md:text-base">
                <p>
                  It gives me immense pleasure to welcome you all to the TTPOA – Global TPO & HR Summit 2025 being held at Hyderabad.
                </p>
                <p>
                  The 1st Global TPO & HR Summit will be an annual landmark summit involving academia and the industry to collaborate in advancing the latest technologies and understanding the skills for the next generation.
                </p>
                <p>
                  The theme of the Global TPO & HR Summit is <span class="font-semibold text-orange-400">Talent – Trade – Tourism</span>, in exploring the opportunity and strengthening the workforce as per the requirements of the industry.
                </p>
                <p>
                  I extend a warm welcome to all the Training and Placement Officers across India, industry leaders, academic partners, training partners, overseas partners and global partners. I feel your insights and contributions will help to shape pathways for inclusive, skillful and future-ready leaders.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-12 md:py-20 bg-white/5 backdrop-blur-sm">
      <div class="max-w-6xl mx-auto px-3 sm:px-4">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Image Grid -->
          <div class="fade-left grid grid-cols-2 gap-4">
            <div class="space-y-4">
              <div class="rounded-2xl overflow-hidden shadow-2xl border-2 border-white/30 hover:border-orange-400/50 transition-all duration-300">
                <Image src={image2} alt="TTPOA Event" class="w-full h-48 object-cover hover:scale-110 transition-transform duration-500" />
              </div>
              <div class="rounded-2xl overflow-hidden shadow-2xl border-2 border-white/30 hover:border-blue-400/50 transition-all duration-300">
                <Image src={image3} alt="TTPOA Workshop" class="w-full h-64 object-cover hover:scale-110 transition-transform duration-500" />
              </div>
            </div>
            <div class="pt-8">
              <div class="rounded-2xl overflow-hidden shadow-2xl border-2 border-white/30 hover:border-purple-400/50 transition-all duration-300 animate-float">
                <Image src={heroImage} alt="TTPOA Training" class="w-full h-80 object-cover hover:scale-110 transition-transform duration-500" />
              </div>
            </div>
          </div>

          <!-- Content -->
          <div class="fade-right">
            <div class="inline-flex items-center bg-gradient-to-r from-blue-500/20 to-orange-500/20 backdrop-blur-md px-6 py-3 rounded-full text-sm font-bold mb-6 text-white border border-white/30 shadow-lg">
              <svg class="w-4 h-4 mr-2 text-orange-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              Upcoming Programs
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-6 leading-tight">Our <span class="gradient-text">Achievements</span></h2>
            <p class="text-white/95 mb-8 leading-relaxed text-base md:text-lg">
              Top instructors from around the world teaching and guiding students towards successful careers. We provide comprehensive placement support and industry connections.
            </p>
            
            <div class="space-y-5 mb-10">
              <div class="flex items-center space-x-4 bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20 hover:bg-white/15 transition-all">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-orange-500 to-orange-600 flex items-center justify-center shadow-lg flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <span class="text-white font-semibold text-base">Comprehensive Placement Support</span>
              </div>
              <div class="flex items-center space-x-4 bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20 hover:bg-white/15 transition-all">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center shadow-lg flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <span class="text-white font-semibold text-base">Skill Development Programs</span>
              </div>
            </div>

            <a href={`${import.meta.env.BASE_URL}/services/`} class="btn-primary inline-flex">
              Explore Programs
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Activities Section -->
    <section class="py-20 relative overflow-hidden">
      <!-- Background Effects -->
      <div class="absolute inset-0 bg-gradient-to-br from-blue-50/80 via-white/60 to-orange-50/80 backdrop-blur-sm"></div>
      <div class="absolute top-0 left-0 w-96 h-96 bg-blue-400/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-orange-400/10 rounded-full blur-3xl"></div>
      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <div class="inline-flex items-center bg-gradient-to-r from-blue-500/20 to-orange-500/20 backdrop-blur-md px-6 py-3 rounded-full text-sm font-bold mb-6 border border-white/30 shadow-lg">
            <svg class="w-5 h-5 mr-2 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            Recent Activities
          </div>
          <h2 class="text-4xl md:text-5xl font-bold mb-4">
            <span class="bg-gradient-to-r from-blue-600 to-orange-500 bg-clip-text text-transparent">Latest Events & Updates</span>
          </h2>
          <p class="text-gray-700 text-lg max-w-2xl mx-auto">
            Stay updated with the latest happenings and achievements at TTPOA
          </p>
        </div>
        
        <!-- Activity Cards Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Activity Card 1 -->
          <div class="fade-up delay-100 bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all hover:scale-105 border border-gray-100">
            <div class="h-48 bg-gradient-to-br from-blue-500 to-blue-600 relative overflow-hidden">
              <div class="absolute inset-0 flex items-center justify-center">
                <svg class="w-20 h-20 text-white/20" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                  <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-500 mb-3">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                </svg>
                February 5, 2026
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">Annual Placement Summit 2026</h3>
              <p class="text-gray-600 mb-4 leading-relaxed">
                Successfully conducted the Annual Placement Summit with participation from 200+ colleges and 150+ companies across Telangana.
              </p>
              <div class="flex items-center text-blue-600 font-semibold text-sm">
                <span>Read More</span>
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </div>

          <!-- Activity Card 2 -->
          <div class="fade-up delay-200 bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all hover:scale-105 border border-gray-100">
            <div class="h-48 bg-gradient-to-br from-purple-500 to-purple-600 relative overflow-hidden">
              <div class="absolute inset-0 flex items-center justify-center">
                <svg class="w-20 h-20 text-white/20" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3z"/>
                  <path d="M5.868 10.196a1 1 0 00-.788 1.838l4.73 2.034a1 1 0 00.788 0l7-3a1 1 0 00-.788-1.838l-6.606 2.832-4.336-1.866z"/>
                </svg>
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-500 mb-3">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                </svg>
                January 28, 2026
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">Skill Development Workshop</h3>
              <p class="text-gray-600 mb-4 leading-relaxed">
                Organized a comprehensive skill development workshop focusing on AI, Machine Learning, and Data Science for students across member institutions.
              </p>
              <div class="flex items-center text-purple-600 font-semibold text-sm">
                <span>Read More</span>
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </div>

          <!-- Activity Card 3 -->
          <div class="fade-up delay-300 bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all hover:scale-105 border border-gray-100">
            <div class="h-48 bg-gradient-to-br from-orange-500 to-orange-600 relative overflow-hidden">
              <div class="absolute inset-0 flex items-center justify-center">
                <svg class="w-20 h-20 text-white/20" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
                </svg>
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-500 mb-3">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                </svg>
                January 15, 2026
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">Industry Partnership Initiative</h3>
              <p class="text-gray-600 mb-4 leading-relaxed">
                Launched new partnerships with 25+ leading tech companies to enhance placement opportunities and provide industry exposure to students.
              </p>
              <div class="flex items-center text-orange-600 font-semibold text-sm">
