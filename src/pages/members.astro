---

<Layout title="Association Members - TTPOA">
  <AntigravityBg />
  <Navbar currentPage="members" />
  
  <main class="pt-16 lg:pt-20">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-50/30 via-transparent to-orange-50/30 backdrop-blur-sm py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="fade-up delay-100 text-4xl md:text-5xl font-bold text-theme-primary mb-6">
            Association <span class="gradient-text">Committee</span>
          </h1>
          <p class="fade-up delay-200 text-lg text-theme-secondary leading-relaxed">
            Meet the dedicated professionals driving TTPOA's mission to bridge the gap between academia and industry.
          </p>
        </div>
      </div>
    </section>

    <!-- Core Committee -->
    <section class="section-padding bg-white/5 backdrop-blur-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="fade-up delay-100 text-3xl md:text-4xl font-bold text-theme-primary mb-4">
            Core Committee
          </h2>
          <p class="fade-up delay-200 text-theme-secondary max-w-2xl mx-auto">
            The visionary leaders steering TTPOA towards excellence
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {coreCommittee.map((member, index) => (
            <div class={`fade-up delay-${(index % 4 + 1) * 100} group relative overflow-hidden rounded-2xl bg-white shadow-lg hover:shadow-2xl transition-all duration-500`}>
              <!-- Member Image Placeholder -->
              <div class="relative aspect-[3/4] overflow-hidden bg-gradient-to-br from-blue-500 to-purple-600">
                <Image 
                  src={member.gender === 'female' ? femalePlaceholder : malePlaceholder}
                  alt={member.name}
                  class="w-full h-full object-cover"
                />
                
                <!-- Hover Details Overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-black via-black/80 to-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-500 p-6 flex flex-col justify-end">
                  <div class="transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
                    <p class="text-orange-400 text-sm font-semibold mb-2">{member.designation}</p>
                    <div class="space-y-2 text-white/90 text-sm">
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                          <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                        </svg>
                        <span class="truncate">{member.email}</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                        </svg>
                        <span>{member.phone}</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Member Info -->
              <div class="p-6 bg-white">
                <h3 class="text-lg font-bold text-gray-900 mb-1">{member.name}</h3>
                <p class="text-orange-600 font-semibold text-sm mb-2">{member.role}</p>
                <p class="text-gray-600 text-sm">{member.institution}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Executive Members -->
    <section class="section-padding bg-gradient-to-b from-slate-50/10 to-transparent backdrop-blur-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
