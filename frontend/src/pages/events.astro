---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import AntigravityBg from '../components/AntigravityBg.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';

// Import event images (fallback)
import event1Cover from '../assets/images/Event-1_1.jpeg';
import event1_2 from '../assets/images/Event-1_2.jpeg';
import event1_3 from '../assets/images/Event-1_3.jpeg';
import event1_4 from '../assets/images/Event-1_4.jpeg';
import event1_5 from '../assets/images/Event-1_5.jpeg';

import event2Cover from '../assets/images/Event-2_1.jpeg';
import event2_2 from '../assets/images/Event-2_2.jpeg';
import event2_3 from '../assets/images/Event-2_3.jpeg';
import event2_4 from '../assets/images/Event-2_4.jpeg';
import event2_5 from '../assets/images/Event-2_5.jpeg';

// Fallback events data
const fallbackEvents = [
  {
    id: 'event-2',
    name: 'Industry Academia Collaboration Summit 2026',
    date: 'January 15, 2026',
    venue: 'Hyderabad International Convention Centre',
    coverImage: event2Cover,
    images: [event2Cover, event2_2, event2_3, event2_4, event2_5],
    description: 'A landmark event bringing together industry leaders and academic institutions to foster collaboration and innovation in training and placements.'
  },
  {
    id: 'event-1',
    name: 'Annual TPO Conference 2025',
    date: 'December 10, 2025',
    venue: 'JNTU Auditorium, Hyderabad',
    coverImage: event1Cover,
    images: [event1Cover, event1_2, event1_3, event1_4, event1_5],
    description: 'Annual Training and Placement Officers Conference featuring TPOs, students, and industry representatives sharing best practices and placement strategies for career success.'
  }
];
---

<Layout title="Events - TTPOA">
  <AntigravityBg />
  <Navbar currentPage="events" />
  
  <main class="pt-32 lg:pt-36 pb-4 relative">
    <!-- Decorative Background Elements -->
    <div class="absolute top-20 left-10 w-72 h-72 bg-blue-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-40 right-10 w-96 h-96 bg-orange-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    
    <!-- Page Header -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-16 relative z-10">
      <div class="text-center fade-up">
        <div class="inline-block mb-6">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-2 bg-gradient-to-r from-blue-400 via-purple-400 to-orange-400 bg-clip-text text-transparent">
            Events
          </h1>
          <div class="h-1 w-full bg-gradient-to-r from-blue-500 via-purple-500 to-orange-500 rounded-full"></div>
        </div>
        <p class="text-xl text-muted max-w-3xl mx-auto leading-relaxed">
          Discover upcoming events and explore our journey through memorable conferences and workshops
        </p>
      </div>
    </div>

    <!-- Upcoming Events Carousel -->
    <section class="mb-20 relative z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
          <h2 class="text-3xl md:text-4xl font-bold mb-3 bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
            Upcoming Events
          </h2>
          <div class="h-1 w-24 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full"></div>
        </div>

        <!-- Dynamic upcoming events container -->
        <div id="upcomingEventsContainer" class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Placeholder cards (replaced by JS if API available) -->
          <div class="fade-up delay-100 glass-card p-6 rounded-2xl shadow-xl text-center border border-white/10">
            <p class="text-muted">Loading upcoming events...</p>
          </div>
        </div>

        <!-- Ongoing Events Section (shown if any) -->
        <div id="ongoingEventsSection" class="hidden mt-12">
          <div class="mb-8">
            <h2 class="text-3xl md:text-4xl font-bold mb-3 bg-gradient-to-r from-green-400 to-emerald-400 bg-clip-text text-transparent">
              Ongoing Events
            </h2>
            <div class="h-1 w-24 bg-gradient-to-r from-green-500 to-emerald-500 rounded-full"></div>
          </div>
          <div id="ongoingEventsContainer" class="grid md:grid-cols-2 lg:grid-cols-3 gap-6"></div>
        </div>
      </div>
    </section>

    <!-- Recent Events -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-12 relative z-10">
      <div class="fade-up">
        <h2 class="text-3xl md:text-4xl font-bold mb-3 bg-gradient-to-r from-orange-400 to-pink-400 bg-clip-text text-transparent">
          Recent Events
        </h2>
        <div class="h-1 w-24 bg-gradient-to-r from-orange-500 to-pink-500 rounded-full"></div>
      </div>
    </div>

    <!-- Dynamic Recent Events Container -->
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8" id="recentEventsContainer">
      <!-- Fallback static timeline -->
      <div class="relative">
        <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full timeline-line"></div>
        <div class="space-y-24">
          {fallbackEvents.map((event, index) => (
            <div 
              class={`relative timeline-item ${index % 2 === 0 ? 'timeline-left' : 'timeline-right'}`}
              data-event-id={event.id}
            >
              <div class="absolute left-1/2 top-0 transform -translate-x-1/2 w-6 h-6 rounded-full timeline-dot z-10"></div>
              <div class={`glass-card p-4 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 cursor-pointer event-card ${index % 2 === 0 ? 'mr-auto lg:mr-[52%]' : 'ml-auto lg:ml-[52%]'}`}>
                <div class="relative overflow-hidden rounded-xl mb-3 group">
                  <Image 
                    src={event.coverImage} 
                    alt={event.name}
                    class="w-full h-48 object-cover transform group-hover:scale-110 transition-transform duration-500"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  <div class="absolute bottom-4 left-4 right-4 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <p class="text-sm font-medium">Click to view gallery →</p>
                  </div>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-heading mb-2">{event.name}</h3>
                  <div class="space-y-1.5 mb-3">
                    <div class="flex items-center text-muted text-sm">
                      <svg class="w-4 h-4 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      <span class="font-medium">{event.date}</span>
                    </div>
                    <div class="flex items-start text-muted text-sm">
                      <svg class="w-4 h-4 mr-2 mt-0.5 text-orange-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                      <span class="font-medium">{event.venue}</span>
                    </div>
                  </div>
                  <p class="text-body text-sm leading-relaxed">{event.description}</p>
                  <div class="mt-3 flex items-center text-orange-500 font-medium text-sm">
                    <span>View Gallery</span>
                    <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </main>

  <!-- Lightbox Modal -->
  <div id="lightbox" class="fixed inset-0 z-[100] hidden">
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-black/95 backdrop-blur-sm"></div>
    
    <!-- Content -->
    <div class="relative h-full flex flex-col">
      <!-- Header -->
      <div class="flex items-center justify-between p-4 lg:p-6">
        <div class="text-white">
          <h3 id="lightbox-title" class="text-xl lg:text-2xl font-bold mb-1"></h3>
          <p id="lightbox-date" class="text-sm text-white/70"></p>
        </div>
        <button id="close-lightbox" class="w-12 h-12 rounded-full bg-white/10 hover:bg-white/20 flex items-center justify-center transition-colors" aria-label="Close">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Image Container -->
      <div class="flex-1 flex items-center justify-center px-4 pb-20">
        <div class="relative max-w-6xl w-full">
          <!-- Navigation Buttons -->
          <button id="prev-image" class="absolute left-4 top-1/2 -translate-y-1/2 w-12 h-12 rounded-full bg-white/10 hover:bg-white/20 backdrop-blur-sm flex items-center justify-center transition-all z-10" aria-label="Previous">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          </button>
          
          <button id="next-image" class="absolute right-4 top-1/2 -translate-y-1/2 w-12 h-12 rounded-full bg-white/10 hover:bg-white/20 backdrop-blur-sm flex items-center justify-center transition-all z-10" aria-label="Next">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>

          <!-- Image -->
          <img id="lightbox-image" src="" alt="" class="w-full h-auto max-h-[70vh] object-contain rounded-lg shadow-2xl" />
          
          <!-- Image Counter -->
          <div class="absolute bottom-4 left-1/2 -translate-x-1/2 bg-black/50 backdrop-blur-sm px-4 py-2 rounded-full">
            <span id="image-counter" class="text-white text-sm font-medium"></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <Footer />
</Layout>

<style>
  .timeline-line {
    background: linear-gradient(to bottom, 
      transparent 0%, 
      rgba(249, 115, 22, 0.4) 5%,
      var(--color-stats-glass-border) 10%, 
      var(--color-stats-glass-border) 90%, 
      rgba(249, 115, 22, 0.4) 95%,
      transparent 100%
    );
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
  }

  .timeline-dot {
    background: linear-gradient(135deg, #3b82f6, #f97316);
    box-shadow: 0 0 0 4px var(--color-glass-card-bg), 
                0 0 20px rgba(59, 130, 246, 0.5),
                0 0 40px rgba(249, 115, 22, 0.3);
    animation: pulse-dot 2s ease-in-out infinite;
    position: relative;
  }

  .timeline-dot::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120%;
    height: 120%;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.3), rgba(249, 115, 22, 0.3));
    border-radius: 50%;
    animation: ripple 2s ease-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
      box-shadow: 0 0 0 4px var(--color-glass-card-bg), 
                  0 0 20px rgba(59, 130, 246, 0.5),
                  0 0 40px rgba(249, 115, 22, 0.3);
    }
    50% {
      transform: translate(-50%, -50%) scale(1.1);
      box-shadow: 0 0 0 4px var(--color-glass-card-bg), 
                  0 0 30px rgba(59, 130, 246, 0.8),
                  0 0 60px rgba(249, 115, 22, 0.5);
    }
  }

  @keyframes ripple {
    0% {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
    100% {
      opacity: 0;
      transform: translate(-50%, -50%) scale(2);
    }
  }

  .timeline-item {
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .timeline-item.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .timeline-left .event-card {
    transform-origin: right center;
  }

  .timeline-right .event-card {
    transform-origin: left center;
  }

  .event-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .event-card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent 30%,
      rgba(255, 255, 255, 0.1) 50%,
      transparent 70%
    );
    transform: rotate(45deg);
    transition: all 0.6s ease;
    opacity: 0;
  }

  .event-card:hover {
    transform: scale(1.03);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .event-card:hover::before {
    opacity: 1;
    animation: shimmer 1.5s ease-in-out;
  }

  @keyframes shimmer {
    0% {
      left: -50%;
    }
    100% {
      left: 150%;
    }
  }

  /* Fade animations */
  .fade-up {
    animation: fadeUp 0.8s ease-out forwards;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive timeline */
  @media (max-width: 1023px) {
    .timeline-line {
      left: 1rem !important;
    }

    .timeline-dot {
      left: 1rem !important;
      transform: translate(-50%, 0) !important;
    }

    .timeline-left .event-card,
    .timeline-right .event-card {
      margin-left: 3rem !important;
      margin-right: 0 !important;
    }
  }

  /* Lightbox animations */
  #lightbox.active {
    display: block;
    animation: fadeIn 0.3s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  #lightbox-image {
    animation: zoomIn 0.3s ease-out;
  }

  @keyframes zoomIn {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>

<script define:vars={{ events: fallbackEvents }}>
  const API_BASE = window.TTPOA_API_BASE || 'http://localhost:3001';

  // Event data with resolved image paths (fallback)
  const eventsData = {};
  
  events.forEach(event => {
    eventsData[event.id] = {
      name: event.name,
      date: event.date,
      images: event.images.map(img => img.src)
    };
  });

  let currentEventId = '';
  let currentImageIndex = 0;

  // ========== DYNAMIC EVENT LOADING ==========
  function buildEventCard(event, colorClass = 'blue') {
    const colors = { blue: 'from-blue-500 to-blue-600', purple: 'from-purple-500 to-purple-600', orange: 'from-orange-500 to-orange-600', green: 'from-green-500 to-green-600' };
    const hoverColors = { blue: 'text-blue-400', purple: 'text-purple-400', orange: 'text-orange-400', green: 'text-green-400' };
    const grad = colors[colorClass] || colors.blue;
    const hover = hoverColors[colorClass] || hoverColors.blue;
    
    const dateStr = event.date ? new Date(event.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : 'TBA';
    
    let badges = '';
    if (event.registration_open) {
      badges += `<span class="text-xs font-bold text-green-400 bg-green-400/10 px-2 py-0.5 rounded-full">Registration Open</span>`;
      if (event.is_paid) {
        badges += ` <span class="text-xs font-bold text-orange-400 bg-orange-400/10 px-2 py-0.5 rounded-full">₹${event.price}</span>`;
      } else {
        badges += ` <span class="text-xs font-bold text-blue-400 bg-blue-400/10 px-2 py-0.5 rounded-full">Free</span>`;
      }
    }

    return `
      <div class="glass-card p-6 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105 group border border-white/10">
        ${event.cover_image ? `<div class="relative overflow-hidden rounded-xl mb-4"><img src="${API_BASE}${event.cover_image}" alt="${event.name}" class="w-full h-40 object-cover transform group-hover:scale-110 transition-transform duration-500"></div>` : `
        <div class="flex items-start justify-between mb-4">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br ${grad} flex items-center justify-center shadow-lg">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <span class="text-xs font-bold text-orange-400 bg-orange-400/10 px-3 py-1 rounded-full">${event.status === 'ongoing' ? 'Happening Now' : 'Coming Soon'}</span>
        </div>`}
        <h3 class="text-xl font-bold text-heading mb-2 group-hover:${hover} transition-colors">${event.name}</h3>
        <p class="text-body text-sm mb-4 leading-relaxed">${event.description || ''}</p>
        <div class="flex items-center text-muted text-sm mb-2">
          <svg class="w-4 h-4 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="font-medium">${dateStr}</span>
        </div>
        ${event.venue ? `<div class="flex items-center text-muted text-sm mb-2"><svg class="w-4 h-4 mr-2 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg><span class="font-medium">${event.venue}</span></div>` : ''}
        <div class="flex flex-wrap gap-1 mt-2">${badges}</div>
        ${event.registration_open && event.registration_link ? `<a href="${event.registration_link}" target="_blank" class="inline-flex items-center gap-2 mt-3 px-4 py-2 bg-gradient-to-r from-orange-500 to-blue-500 rounded-lg text-white text-sm font-bold hover:shadow-lg transition-all">Register Now</a>` : ''}
      </div>
    `;
  }

  function buildRecentEventCard(event, index) {
    const dateStr = event.date ? new Date(event.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : '';
    const side = index % 2 === 0 ? 'mr-auto lg:mr-[52%]' : 'ml-auto lg:ml-[52%]';
    
    return `
      <div class="relative timeline-item visible ${index % 2 === 0 ? 'timeline-left' : 'timeline-right'}" data-event-id="dynamic-${event.id}">
        <div class="absolute left-1/2 top-0 transform -translate-x-1/2 w-6 h-6 rounded-full timeline-dot z-10"></div>
        <div class="glass-card p-4 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 cursor-pointer event-card ${side}" onclick="openDynamicLightbox(${event.id})">
          ${event.cover_image ? `<div class="relative overflow-hidden rounded-xl mb-3 group"><img src="${API_BASE}${event.cover_image}" alt="${event.name}" class="w-full h-48 object-cover transform group-hover:scale-110 transition-transform duration-500"><div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div><div class="absolute bottom-4 left-4 right-4 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300"><p class="text-sm font-medium">Click to view gallery →</p></div></div>` : ''}
          <div>
            <h3 class="text-xl font-bold text-heading mb-2">${event.name}</h3>
            <div class="space-y-1.5 mb-3">
              <div class="flex items-center text-muted text-sm">
                <svg class="w-4 h-4 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                <span class="font-medium">${dateStr}</span>
              </div>
              ${event.venue ? `<div class="flex items-start text-muted text-sm"><svg class="w-4 h-4 mr-2 mt-0.5 text-orange-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg><span class="font-medium">${event.venue}</span></div>` : ''}
            </div>
            <p class="text-body text-sm leading-relaxed">${event.description || ''}</p>
            ${event.gallery && event.gallery.length > 0 ? `<div class="mt-3 flex items-center text-orange-500 font-medium text-sm"><span>View Gallery (${event.gallery.length} photos)</span><svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg></div>` : ''}
          </div>
        </div>
      </div>
    `;
  }

  // Store dynamic events data for lightbox
  let dynamicEventsData = {};

  async function loadDynamicEvents() {
    try {
      // Load upcoming events
      const [upcomingRes, ongoingRes, recentRes] = await Promise.all([
        fetch(`${API_BASE}/api/events/upcoming`),
        fetch(`${API_BASE}/api/events/ongoing`),
        fetch(`${API_BASE}/api/events/recent`)
      ]);

      const upcoming = await upcomingRes.json();
      const ongoing = await ongoingRes.json();
      const recent = await recentRes.json();

      // Render upcoming
      const upcomingContainer = document.getElementById('upcomingEventsContainer');
      if (upcomingContainer) {
        if (upcoming.length > 0) {
          const colorCycle = ['blue', 'purple', 'orange'];
          upcomingContainer.innerHTML = upcoming.map((e, i) => buildEventCard(e, colorCycle[i % 3])).join('');
        } else {
          upcomingContainer.innerHTML = '<div class="glass-card p-6 rounded-2xl text-center border border-white/10 col-span-3"><p class="text-muted">No upcoming events at the moment. Stay tuned!</p></div>';
        }
      }

      // Render ongoing
      const ongoingSection = document.getElementById('ongoingEventsSection');
      const ongoingContainer = document.getElementById('ongoingEventsContainer');
      if (ongoingSection && ongoingContainer) {
        if (ongoing.length > 0) {
          ongoingSection.classList.remove('hidden');
          ongoingContainer.innerHTML = ongoing.map(e => buildEventCard(e, 'green')).join('');
        }
      }

      // Render recent events
      if (recent.length > 0) {
        const recentContainer = document.getElementById('recentEventsContainer');
        if (recentContainer) {
          // Store gallery data for lightbox
          recent.forEach(event => {
            dynamicEventsData[event.id] = {
              name: event.name,
              date: new Date(event.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }),
              images: (event.gallery || []).map(img => `${API_BASE}${img.image_path}`)
            };
            // Also add cover image to gallery if gallery has images
            if (event.cover_image && dynamicEventsData[event.id].images.length === 0) {
              dynamicEventsData[event.id].images.push(`${API_BASE}${event.cover_image}`);
            }
          });

          recentContainer.innerHTML = `
            <div class="relative">
              <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full timeline-line"></div>
              <div class="space-y-24">
                ${recent.map((event, index) => buildRecentEventCard(event, index)).join('')}
              </div>
            </div>
          `;

          // Re-observe timeline items
          const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
              if (entry.isIntersecting) entry.target.classList.add('visible');
            });
          }, { threshold: 0.2, rootMargin: '0px 0px -100px 0px' });
          document.querySelectorAll('.timeline-item').forEach(item => observer.observe(item));
        }
      }
    } catch (e) {
      // API unavailable - fallback content already rendered
      console.log('Using fallback event data');
    }
  }

  // Open lightbox for dynamic events
  window.openDynamicLightbox = function(eventId) {
    const event = dynamicEventsData[eventId];
    if (!event || !event.images || event.images.length === 0) return;

    currentEventId = `dyn-${eventId}`;
    currentImageIndex = 0;
    eventsData[currentEventId] = event;

    const lightbox = document.getElementById('lightbox');
    const title = document.getElementById('lightbox-title');
    const date = document.getElementById('lightbox-date');
    
    if (title) title.textContent = event.name;
    if (date) date.textContent = event.date;
    
    updateLightboxImage();
    lightbox?.classList.add('active');
    document.body.style.overflow = 'hidden';
  };

  document.addEventListener('DOMContentLoaded', () => {
    // Load dynamic events
    loadDynamicEvents();

    // Intersection Observer for timeline items
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, {
      threshold: 0.2,
      rootMargin: '0px 0px -100px 0px'
    });

    document.querySelectorAll('.timeline-item').forEach(item => {
      observer.observe(item);
    });

    // Event card click handlers (for fallback static cards)
    document.querySelectorAll('.event-card').forEach(card => {
      if (!card.hasAttribute('onclick')) {
        card.addEventListener('click', () => {
          const eventId = card.parentElement?.dataset?.eventId;
          if (eventId) openLightbox(eventId);
        });
      }
    });

    // Lightbox controls
    const lightbox = document.getElementById('lightbox');
    const closeLightbox = document.getElementById('close-lightbox');
    const prevImage = document.getElementById('prev-image');
    const nextImage = document.getElementById('next-image');

    closeLightbox?.addEventListener('click', () => {
      lightbox?.classList.remove('active');
      document.body.style.overflow = '';
    });

    prevImage?.addEventListener('click', (e) => {
      e.stopPropagation();
      navigateImage(-1);
    });

    nextImage?.addEventListener('click', (e) => {
      e.stopPropagation();
      navigateImage(1);
    });

    document.addEventListener('keydown', (e) => {
      if (!lightbox?.classList.contains('active')) return;
      if (e.key === 'Escape') {
        lightbox.classList.remove('active');
        document.body.style.overflow = '';
      } else if (e.key === 'ArrowLeft') {
        navigateImage(-1);
      } else if (e.key === 'ArrowRight') {
        navigateImage(1);
      }
    });

    lightbox?.addEventListener('click', (e) => {
      if (e.target === lightbox) {
        lightbox.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
  });

  function openLightbox(eventId) {
    currentEventId = eventId;
    currentImageIndex = 0;
    
    const event = eventsData[eventId];
    if (!event) return;

    const lightbox = document.getElementById('lightbox');
    const title = document.getElementById('lightbox-title');
    const date = document.getElementById('lightbox-date');
    
    if (title) title.textContent = event.name;
    if (date) date.textContent = event.date;
    
    updateLightboxImage();
    
    lightbox?.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function navigateImage(direction) {
    const event = eventsData[currentEventId];
    if (!event) return;

    currentImageIndex += direction;
    
    if (currentImageIndex < 0) {
      currentImageIndex = event.images.length - 1;
    } else if (currentImageIndex >= event.images.length) {
      currentImageIndex = 0;
    }
    
    updateLightboxImage();
  }

  function updateLightboxImage() {
    const event = eventsData[currentEventId];
    if (!event) return;

    const img = document.getElementById('lightbox-image');
    const counter = document.getElementById('image-counter');
    
    if (img) {
      img.src = event.images[currentImageIndex];
      img.alt = `${event.name} - Image ${currentImageIndex + 1}`;
    }
    
    if (counter) {
      counter.textContent = `${currentImageIndex + 1} / ${event.images.length}`;
    }
  }
