---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import NewsTicker from '../components/NewsTicker.astro';
import AntigravityBg from '../components/AntigravityBg.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import heroImage from '../assets/images/HeroBackground.jpeg';
import image2 from '../assets/images/Event-2_3.jpeg';
import image3 from '../assets/images/Event-2_4.jpeg';
import presidentImage from '../assets/images/President_Image.jpeg';
---

<Layout title="TTPOA - Telangana Training and Placement Officers Association">
  <AntigravityBg />
  <Navbar currentPage="home" />
  <NewsTicker />
  
  <main>
    <!-- Hero Section with Background Image -->
    <section class="relative min-h-screen flex flex-col justify-center overflow-visible">
      <!-- Full Width Background Image -->
      <div class="absolute inset-0 -top-20 lg:-top-24">
        <Image 
          src={heroImage} 
          alt="TTPOA Hero Background" 
          class="w-full h-full object-cover object-top"
        />
        <!-- Dark Overlay for better text visibility -->
        <div class="absolute inset-0 bg-black/50"></div>
      </div>
      
      <!-- Centered Content -->
      <div class="relative z-10 w-full flex-1 flex items-center pt-52 lg:pt-60">
        <div class="text-center px-4 sm:px-6 lg:px-8 w-full pb-32">
          <h1 class="fade-up text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 leading-tight max-w-5xl mx-auto">
            Telangana Training & Placement Officers Association - <span class="gradient-text">TTPOA</span>
          </h1>
          
          <p class="fade-up delay-100 text-xl md:text-2xl text-orange-400 font-semibold mb-8 max-w-4xl mx-auto">
            One & Only Registered TPO Association
          </p>
          
          <p class="fade-up delay-200 text-lg md:text-xl text-white mb-8 max-w-4xl mx-auto leading-relaxed">
            Empowering Students | Strengthening TPO Network | Driving Placements
          </p>
          
          <div class="fade-up delay-300 flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a href={`${import.meta.env.BASE_URL}/services/`} class="btn-primary">
              View Our Programs
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            <a href={`${import.meta.env.BASE_URL}/contact/`} class="glass-btn">
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Glass Container - Overlapping Both Sections -->
    <div class="relative -mt-24 z-20">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="stats-glass-container scroll-reveal" style="opacity: 0; transform: translateY(50px); visibility: hidden;">
          <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
            <!-- Stat 1 -->
            <div class="text-center group">
              <div class="flex items-center justify-center mb-2">
                <svg class="w-8 h-8 text-orange-400 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <span class="block text-3xl md:text-4xl font-extrabold stats-number mb-1 counter" data-target="325000">0</span>
              <p class="text-xs md:text-sm stats-label uppercase tracking-wide font-semibold">Students</p>
            </div>

            <!-- Stat 2 -->
            <div class="text-center group">
              <div class="flex items-center justify-center mb-2">
                <svg class="w-8 h-8 text-blue-400 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <span class="block text-3xl md:text-4xl font-extrabold stats-number mb-1 counter" data-target="214">0</span>
              <p class="text-xs md:text-sm stats-label uppercase tracking-wide font-semibold">Colleges</p>
            </div>

            <!-- Stat 3 -->
            <div class="text-center group">
              <div class="flex items-center justify-center mb-2">
                <svg class="w-8 h-8 text-purple-400 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <span class="block text-3xl md:text-4xl font-extrabold stats-number mb-1 counter" data-target="379">0</span>
              <p class="text-xs md:text-sm stats-label uppercase tracking-wide font-semibold">TPOs</p>
            </div>

            <!-- Stat 4 -->
            <div class="text-center group">
              <div class="flex items-center justify-center mb-2">
                <svg class="w-8 h-8 text-green-400 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                </svg>
              </div>
              <span class="block text-3xl md:text-4xl font-extrabold stats-number mb-1 counter" data-target="1000">0</span>
              <p class="text-xs md:text-sm stats-label uppercase tracking-wide font-semibold">Placement Opportunities</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Vision & Mission Section -->
    <section id="vision-mission" class="pt-24 pb-16 md:pb-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">
            <span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">Our Vision & Mission</span>
          </h2>
          <p class="text-theme-secondary text-lg max-w-2xl mx-auto">
            Shaping the future of placements in Telangana
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Vision Card -->
          <div class="group bg-white/10 backdrop-blur-md border border-white/20 rounded-3xl p-8 hover:bg-white/15 transition-all duration-300 shadow-xl hover:shadow-2xl">
            <div class="flex items-center mb-6">
              <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-blue-500 to-cyan-500 flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-theme-primary ml-4">Our Vision</h3>
            </div>
            <p class="text-theme-secondary leading-relaxed">
              To establish TTPOA as the catalyst for transforming Telangana into a national hub of employability excellence, where every student receives world-class placement opportunities and every institution achieves 100% placement success through collaborative innovation and industry partnerships.
            </p>
          </div>

          <!-- Mission Card -->
          <div class="group bg-white/10 backdrop-blur-md border border-white/20 rounded-3xl p-8 hover:bg-white/15 transition-all duration-300 shadow-xl hover:shadow-2xl">
            <div class="flex items-center mb-6">
              <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-theme-primary ml-4">Our Mission</h3>
            </div>
            <p class="text-theme-secondary leading-relaxed">
              To empower TPOs with cutting-edge resources, foster strong industry-academia collaborations, facilitate 1000+ quality placement opportunities, and create a unified platform that ensures every student across our 214 member colleges achieves their career aspirations through skill development and strategic placement support.
            </p>
          </div>
        </div>

        <div class="text-center mt-10">
          <a href={`${import.meta.env.BASE_URL}/about/#vision-mission`} class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-500 hover:from-blue-600 hover:to-purple-600 rounded-xl transition-all duration-300 font-bold text-white shadow-lg hover:shadow-xl hover:scale-105">
            Explore More
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- President's Note Section -->
    <section id="presidents-note" class="py-16 md:py-20">
      <div class="w-full px-0">
        <div class="text-center mb-16 px-4">
          <h2 class="fade-up text-3xl md:text-4xl font-bold text-theme-primary mb-4">President's Welcome Note</h2>
          <p class="fade-up delay-100 text-theme-secondary max-w-2xl mx-auto">TTPOA – Global TPO & HR Summit 2025</p>
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-lg border border-white/20 rounded-3xl overflow-hidden shadow-2xl p-8 md:p-12">
          <div class="grid md:grid-cols-12 gap-8 md:gap-12 items-center">
            <!-- President Image - Framed & Smaller -->
            <div class="fade-left md:col-span-4 lg:col-span-3">
              <div class="relative group">
                <!-- Decorative Frame -->
                <div class="absolute -inset-1 bg-gradient-to-r from-orange-500 via-blue-500 to-orange-500 rounded-2xl blur opacity-75 group-hover:opacity-100 transition duration-500 animate-pulse"></div>
                
                <!-- Image Container -->
                <div class="relative bg-gradient-to-br from-slate-900 to-slate-800 p-3 rounded-2xl">
                  <div class="relative rounded-xl overflow-hidden shadow-2xl">
                    <Image 
                      src={presidentImage} 
                      alt="Dr Jayaram - President" 
                      class="w-full h-auto object-cover aspect-[3/4]"
                    />
                    <!-- Elegant Overlay -->
                    <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent"></div>
                  </div>
                  
                  <!-- Corner Accents -->
                  <div class="absolute top-1 left-1 w-6 h-6 border-t-2 border-l-2 border-orange-400 rounded-tl-xl"></div>
                  <div class="absolute top-1 right-1 w-6 h-6 border-t-2 border-r-2 border-orange-400 rounded-tr-xl"></div>
                  <div class="absolute bottom-1 left-1 w-6 h-6 border-b-2 border-l-2 border-blue-400 rounded-bl-xl"></div>
                  <div class="absolute bottom-1 right-1 w-6 h-6 border-b-2 border-r-2 border-blue-400 rounded-br-xl"></div>
                </div>
              </div>
            </div>

            <!-- President's Message -->
            <div class="fade-right md:col-span-8 lg:col-span-9 flex flex-col justify-center">
              <div class="mb-6">
                <h3 class="text-2xl md:text-3xl font-bold text-theme-primary mb-3">
                  Dr Jayaram
                </h3>
                <div class="flex flex-col gap-1">
                  <p class="text-orange-400 font-semibold text-sm md:text-base">President, Telangana TPO Association</p>
                  <p class="text-blue-400 font-semibold text-sm md:text-base">Vice President, All India TPO Association</p>
                </div>
              </div>
              
              <div class="text-theme-secondary leading-relaxed text-base md:text-lg mb-6 space-y-3">
                <p>
                  It gives me immense pleasure to welcome you all to the TTPOA – Global TPO & HR Summit 2025 being held at Hyderabad. The 1st Global TPO & HR Summit will be an annual landmark summit involving academia and the industry to collaborate in advancing the latest technologies and understanding the skills for the next generation. The theme of the Global TPO & HR Summit is <span class="font-semibold text-orange-400">Talent – Trade – Tourism</span>...
                </p>
              </div>
              
              <a href={`${import.meta.env.BASE_URL}/about/#presidents-note`} class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-orange-500 to-blue-500 hover:from-orange-600 hover:to-blue-600 rounded-xl transition-all duration-300 font-bold text-white shadow-lg hover:shadow-xl hover:scale-105 w-fit group">
                Read Full Message
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
        </div>
      </div>
    </section>

    <!-- Placement Activities Preview -->
    <section id="placement-activities" class="py-16 md:py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">
            <span class="bg-gradient-to-r from-orange-400 to-red-400 bg-clip-text text-transparent">Placement Activities</span>
          </h2>
          <p class="text-theme-secondary text-lg max-w-2xl mx-auto">
            Connecting talent with opportunity through diverse placement initiatives
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 mb-10">
          <!-- Pool Campus Drives -->
          <div class="group bg-gradient-to-br from-orange-500/10 to-red-500/10 backdrop-blur-md border border-orange-400/20 rounded-3xl p-8 hover:border-orange-400/40 transition-all duration-300 shadow-xl hover:shadow-2xl hover:scale-105">
            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-orange-500 to-red-500 flex items-center justify-center shadow-lg mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-theme-primary mb-3">Pool Campus Drives</h3>
            <p class="text-theme-secondary leading-relaxed">
              Multi-college recruitment drives bringing together students from various institutions to meet top employers in one platform.
            </p>
          </div>

          <!-- Off Campus Drives -->
          <div class="group bg-gradient-to-br from-blue-500/10 to-cyan-500/10 backdrop-blur-md border border-blue-400/20 rounded-3xl p-8 hover:border-blue-400/40 transition-all duration-300 shadow-xl hover:shadow-2xl hover:scale-105">
            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-blue-500 to-cyan-500 flex items-center justify-center shadow-lg mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-theme-primary mb-3">Off Campus Drives</h3>
            <p class="text-theme-secondary leading-relaxed">
              Strategic partnerships with leading companies for recruitment opportunities beyond traditional campus boundaries.
            </p>
          </div>

          <!-- On Campus Drives -->
          <div class="group bg-gradient-to-br from-purple-500/10 to-pink-500/10 backdrop-blur-md border border-purple-400/20 rounded-3xl p-8 hover:border-purple-400/40 transition-all duration-300 shadow-xl hover:shadow-2xl hover:scale-105">
            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center shadow-lg mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-theme-primary mb-3">On Campus Drives</h3>
            <p class="text-theme-secondary leading-relaxed">
              Exclusive recruitment events conducted at member colleges, providing direct access to opportunities for students.
            </p>
          </div>
        </div>

        <div class="text-center">
          <a href={`${import.meta.env.BASE_URL}/placement-activities/`} class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 rounded-xl transition-all duration-300 font-bold text-white shadow-lg hover:shadow-xl hover:scale-105">
            View All Placement Activities
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Recent Events Section -->
    <section id="recent-events" class="py-20 relative overflow-hidden">
      <!-- Background Effects -->
      <div class="absolute inset-0 bg-gradient-to-br from-blue-50/80 via-white/60 to-orange-50/80 backdrop-blur-sm"></div>
      <div class="absolute top-0 left-0 w-96 h-96 bg-blue-400/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-orange-400/10 rounded-full blur-3xl"></div>
      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">
            <span class="bg-gradient-to-r from-blue-600 to-orange-500 bg-clip-text text-transparent">Recent Events</span>
          </h2>
          <p class="text-gray-700 text-lg max-w-2xl mx-auto">
            Highlights from our latest activities and achievements
          </p>
        </div>
        
        <!-- Event Cards Grid -->
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Event Card 1 -->
          <div class="group event-card bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 border border-gray-100 hover:border-orange-300">
            <div class="relative h-56 bg-gradient-to-br from-blue-500 to-blue-600 overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
              <div class="absolute inset-0 flex items-center justify-center transform group-hover:scale-110 transition-transform duration-500">
                <svg class="w-24 h-24 text-white/30" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                  <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-500 mb-3">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                </svg>
                February 15, 2026
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">Global TPO & HR Summit 2025</h3>
              <p class="text-gray-600 mb-4 leading-relaxed line-clamp-3">
                Join us for the landmark annual summit bringing together academia and industry leaders to discuss emerging technologies and future workforce skills.
