  <script>
    // Load and display landing page popup from backend
    (async function loadPopup() {
      try {
        const API_BASE = window.TTPOA_API_BASE || 'http://localhost:3001';
        const res = await fetch(`${API_BASE}/api/popup`);
        if (!res.ok) return;
        const popup = await res.json();
        if (!popup || !popup.active) return;

        const popupEl = document.getElementById('landingPopup');
        const container = document.getElementById('popupContainer');
        if (!popupEl || !container) return;

        // Build popup content based on layout
        let positionClass = 'items-center justify-center';
        let sizeClass = 'max-w-lg w-full';

        if (popup.layout === 'fullscreen') {
          sizeClass = 'max-w-4xl w-full';
        } else if (popup.layout === 'bottom-right') {
          positionClass = 'items-end justify-end';
          sizeClass = 'max-w-sm w-full mb-6 mr-6';
        }

        container.className = `relative flex ${positionClass} min-h-screen p-4`;

        container.innerHTML = `
          <div class="${sizeClass} bg-gradient-to-br from-slate-900/95 to-slate-800/95 backdrop-blur-xl border border-white/20 rounded-3xl overflow-hidden shadow-2xl relative z-10 animate-[zoomIn_0.3s_ease-out]">
            <button onclick="closePopup(${popup.id})" class="absolute top-3 right-3 w-8 h-8 bg-white/10 hover:bg-white/20 rounded-full flex items-center justify-center text-white z-20 transition-colors cursor-pointer">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
            </button>
            ${popup.image ? `<div class="w-full ${popup.layout === 'fullscreen' ? 'h-64 md:h-80' : 'h-48'} overflow-hidden"><img src="${API_BASE}${popup.image}" alt="${popup.event_name}" class="w-full h-full object-cover"></div>` : ''}
            <div class="p-6 ${popup.layout === 'bottom-right' ? 'p-4' : 'p-6 md:p-8'}">
              <h3 class="text-xl ${popup.layout === 'bottom-right' ? 'text-lg' : 'md:text-2xl'} font-bold text-white mb-2">${popup.event_name}</h3>
              ${popup.description ? `<p class="text-gray-300 text-sm mb-4 leading-relaxed">${popup.description}</p>` : ''}
              ${popup.button_text ? `<a href="${popup.button_link || '#'}" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-orange-500 to-blue-500 hover:from-orange-600 hover:to-blue-600 rounded-xl transition-all duration-300 font-bold text-white text-sm shadow-lg hover:shadow-xl">${popup.button_text}<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg></a>` : ''}
            </div>
          </div>
        `;

        // Show popup after a small delay
        setTimeout(() => {
          popupEl.classList.remove('hidden');
          document.body.style.overflow = 'hidden';
        }, 1500);

        // Close on overlay click
        document.getElementById('popupOverlay').addEventListener('click', () => closePopup(popup.id));

      } catch (e) {
        // No popup available - that's fine
      }
    })();

    window.closePopup = function(popupId) {
      const popupEl = document.getElementById('landingPopup');
      if (popupEl) {
        popupEl.classList.add('hidden');
        document.body.style.overflow = '';
      }
    };

    // Scroll reveal animation for stats container
    document.addEventListener('DOMContentLoaded', () => {
      const statsContainer = document.querySelector('.stats-glass-container');
      
      const toggleStatsVisibility = () => {
        if (!statsContainer) return;
        
        const containerPosition = statsContainer.getBoundingClientRect().top;
        const containerBottom = statsContainer.getBoundingClientRect().bottom;
        const screenPosition = window.innerHeight * 0.75;
        const scrollY = window.scrollY || window.pageYOffset;
        
        // Show when scrolling down and container enters viewport
        // Hide when at top of page or when container is completely out of view
        if (scrollY < 100) {
          // At the very top of page - hide
          statsContainer.classList.remove('revealed');
        } else if (containerPosition < screenPosition && containerBottom > 0) {
          // Container is in view - show
          statsContainer.classList.add('revealed');
        } else if (containerBottom < 0) {
          // Container is above viewport - hide
          statsContainer.classList.remove('revealed');
        }
      };
      
      // Check on scroll
      window.addEventListener('scroll', toggleStatsVisibility);
      
      // Initial check
      toggleStatsVisibility();

      // Event Cards Animation on Scroll
      const eventCards = document.querySelectorAll('.event-card');
      
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -100px 0px'
      };
      
      const cardObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.animationPlayState = 'running';
            cardObserver.unobserve(entry.target);
          }
        });
      }, observerOptions);
      
      eventCards.forEach(card => {
        cardObserver.observe(card);
      });
    });
  </script>
